  <div class="ui ">
    <%= form_for(:session, url: signup_path, html: { class: "ui form", role: "form" }) do |f| %>
      <div class="field">
        <%= f.label :username %>
        <div class="ui left icon input">
          <%= f.text_field :username, placeholder: "Username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="ui left icon input">
          <%= f.password_field :password, placeholder: "Password" %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit "Sign up", class: "ui large orange submit button loginbt" %>
    <% end %>
